<%- include partials/header.ejs %>
<%- include partials/main_nav.ejs %>
<!--Main Content-->
<main>
<div class="jumbotron jumbotron-fluid">

    <section id="contacts">
    <h1> <%= title %> page</h1>
    <!--Content contactform-->
        <form class="contactform">
            <!--Input name-->
            <label for="name">Name: </label>
            <input type="text" name="name" size="40" required><br>
            <!--Input email-->
            <label for="email">Email: </label>
            <input type="email" name="email" size="40" required><br>
            <!--Input phone number-->
            <label for="phone">Phone Number: </label>
            <input type="phone" name="phone" size="12" required><br>  
            <!--Input message-->
            <label for="message">Message: </label><br>
            <textarea type="text" name="message" cols="60" rows="6"required></textarea><br>
            <!--Submit button-->
            <button>Submit</button>
        </form>
  </section>

</div>
</main>
